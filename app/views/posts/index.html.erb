<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class= "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Deadline for collection</th>
      <th>Available pickup time</th>
      <th>Order</th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
    <tr>
     <td><%= post.title %></td>
     <td><%= post.description %></td>
     <td><%= post.deadline_for_collection.to_date %></td>
     <td><%= post.pickup_start.strftime("%H:%M") %> - <%= post.pickup_end.strftime("%H:%M") %></td>
     <td><a href="/posts/<%= post.id %>/orders/new">Order</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<% if current_user.class == Supporter %>

<%= link_to 'New Post', new_post_path %>

<% else %>
<% end %>
