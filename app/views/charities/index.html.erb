


<% if current_user.orders.empty? %> 

  <h3>You are always warmly welcome to our community. We are here to support you!</h3>

<% else %> 

  <% current_user.orders.order(created_at: :desc).each do |x| %> 
    <div>
      <br>Title: <%= x.post.title %><br>
      <br>Ordered date: <%= x.created_at %><br>
      <br>Collection date/time: <%= x.collection_date %>/<%= x.collection_time %><br>
      <div class="thumbnail">
        <% if x.post.photos? %> 
        <%= link_to (image_tag x.post.photos[0].small,:class => "thum"),post_path(x.post) %>
        <% else %>
        <%= link_to (image_tag 'default.jpg',:class => "thum" ),post_path(x.post)%>  
        <% end %> 
      </div>



    </div>
  <% end %> 

<% end %> 


