<div>
	<h3>Create a new account</h3>
	<%= form_for @supporter do |form| %>
	<%= render partial: '/supporters/form', object: form %>
	<%= form.submit "Submit" %>
	<% end %>
</div>



<% if @supporter.errors.any? %> 
  <div id="error_explanation">
    <h3><%= pluralize(@supporter.errors.count, "error") %>:</h3>
 
    <ul>
    <% @supporter.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= link_to "new charity", new_charity_path %><br>
<%= link_to "sign in", new_session_path %>























